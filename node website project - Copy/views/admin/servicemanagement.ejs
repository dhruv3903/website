<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/admin/css/style.css">
    </head>
<body>
   <%- include('../../partials/admin/header.ejs')%>
    <section id="mid">
        <div class="container">
            <div class="row">
                <%- include('../../partials/admin/links.ejs')%>
                <div class="col-md-9">
                    <h2>Service Management</h2>
                    <table class="table table-hover">
                        <tr>
                            <th colspan="3">Service Dashboard</th>
                        </tr>
                        <tr>
                            <td>Total service:<%=tservice%></td>
                            <td>Published:<%=published%></td>
                            <td>Unpublished:<%=unpublished%></td>
                        </tr>
                    </table>
                    <form action="" method="post">
                        <label for="">Select One Status</label>
                        <select name="select" id="" class="form-select">
                            <option value="">Select Status</option>
                            <option value="Published">Published Services</option>
                            <option value="Unpublished">Unpublished Services</option>
                        </select>
                        <button type="submit" class="btn btn-primary form-control mt-2 mb-4">Search</button>
                    </form>
                   <a href="/admin/serviceform"><button class="btn btn-danger form-control">Add More Services</button></a> 
                    <table class="table table-hover">
                        <tr>
                            <th>Sno.</th>
                            <th>Service Image</th>
                            <th>Service Title</th>
                            <th>Service Description</th>
                            <th>More Details</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                        <%record.forEach((result,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><img src="/upload/<%=result.img%>" alt=""></td>
                                <td><%=result.title%></td>
                                <td><%=result.desc%></td>
                                <td><%=result.more%></td>
                                <%if(result.status=='Published'){%>
                                    <td><a href="/admin/servicestatusupdate/<%=result.id%>"><button class=" btn btn-success"><%=result.status%></button></a></td>  
                               <%}else{%>
                                    <td><a href="/admin/servicestatusupdate/<%=result.id%>"><button class=" btn btn-danger"><%=result.status%></button></a></td>
                               <%}%>
                               
                                <td><a href="/admin/servicedelete/<%=result.id%>"><i class="bi bi-trash3"></i></a></td>
                            </tr>
                       <%})%>
                       <%if(record.length==0){%>
                        <tr><td colspan="6" class="text-center"><h2>No Record Found</h2></td></tr>
                       <%}%>
                       
                    </table>
                </div>
            </div>
        </div>
    </section>
    <%- include('../../partials/admin/footer.ejs')%>
</body>
</html>