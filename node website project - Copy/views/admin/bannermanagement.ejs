<body>
   <%- include('../../partials/admin/header.ejs')%>
    <section id="mid">
        <div class="container">
            <div class="row">
                <%- include('../../partials/admin/links.ejs')%>
                <div class="col-md-9">
                    <h2>Banner management</h2>
                    <table class="table table-hover">
                        <tr>
                            <th>Banner title</th>
                            <th>Banner description</th>
                            <th>Banner img</th>
                            <th>More description</th>
                            <th>Action</th>
                        </tr>
                        <tr>
                            <td><%=record.title%></td>
                            <td><%=record.desc%></td>
                            <td><img src="/upload/<%=record.img%>" alt=""></td>
                            <td><%=record.more%></td>
                            <td><a href="/admin/bannerupdate/<%=record.id%>"><i class="bi bi-pencil"></i></a></td>
                        </tr>
                    </table>

                    
                </div>
            </div>
        </div>
    </section>
    <%- include('../../partials/admin/footer.ejs')%>
