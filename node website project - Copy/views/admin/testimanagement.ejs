<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/admin/css/style.css">
    </head>
<body>
   <%- include('../../partials/admin/header.ejs')%>
    <section id="mid">
        <div class="container">
            <div class="row">
                <%- include('../../partials/admin/links.ejs')%>
                <div class="col-md-9">
                    <h2>Testinominals Management</h2>
                    <table class="table table-hover">
                        <tr>
                            <th colspan="3"><h4 class="text-center">Testinominals Dashboard</h4></th>
                        </tr>
                        <tr>
                            <td>Total service:<%=ttesti%></td>
                            <td>Published:<%=published%></td>
                            <td>Unpublished:<%=unpublished%></td>
                        </tr>
                    </table>
                    <form action="" method="post">
                        <label for="">Select One Status</label>
                        <select name="select" id="" class="form-select">
                            <option value="">Select Status</option>
                            <option value="Published">Published Testinominals</option>
                            <option value="Unpublished">Unpublished Testinominals</option>
                        </select>
                        <button type="submit" class="btn btn-primary form-control mt-2 mb-4">Search</button>
                    </form>
                    <table class="table table-hover">
                        <tr>
                            <th>Sno.</th>
                            <th>User Image</th>
                            <th>User Review</th>
                            <th>User Name</th>
                            <th>Status</th>
                            <th>Posted Date</th>
                            <th>Delete</th>
                        </tr>
                        <%record.forEach((result,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><img src="/upload/<%=result.img%>" alt=""></td>
                                <td><%=result.reviews%></td>
                                <td><%=result.name%></td>
                                <%if(result.status=='Published'){%>
                                    <td><a href="/admin/testistatusupdate/<%=result.id%>"><button class="btn btn-success"><%=result.status%></button></a></td>
                               <%}else{%>
                                    <td><a href="/admin/testistatusupdate/<%=result.id%>"><button class="btn btn-danger"><%=result.status%></button></a></td>
                               <%}%>
                                <td><%=result.postedDate%></td>
                                <td><a href="/admin/testidelete/<%=result.id%>"><i class="bi bi-trash3"></i></a></td>
                            <%})%>
                            <%if(record.length==0){%>
                                <tr><td colspan="6" class="text-center"><h2>No Record Found</h2></td></tr>
                               <%}%>
                       
                    </table>
                </div>
            </div>
        </div>
    </section>
    <%- include('../../partials/admin/footer.ejs')%>
</body>
</html>